.main
  .content
    .content__left
    .content__right
      .top__content
        .item-box
          %h2.item-box__name 
            = @item.name
          .item-box__body
            .item-box__main
              .mainPct
                = image_tag(@item.images.first.image.url, class: "main__photo")
                -# = image_tag asset_path('beef.png'), size: "550x350"
                .subPct-box
                  .subPct
                    -# = image_tag(@item.images[1].image.url)
                    -# = image_tag(@item.images[2].image.url)
                    -# - @item.each do |img|
                    -#   .subPct-list
                    -#     = image_tag(img.image.url)
          .item-box__price
            %span.price
              ¥
              = @item.price.to_s(:delimited)

            .item-box__price--detail
              %span.tax
                (税込)
              %span.postage
                送料込み
            .item__detail
              = @item.introduction
          .table
            %table
              %tbody
                %tr
                  %th
                    出品者
                  %td
                    = @user.nickname
                %tr
                  %th
                    カテゴリー
                  %td
                    %br= link_to "#{@category_parent.name}", "#" 
                    
                    %br= link_to "#{@category_child.name}", "#"
                    
                    %br= link_to "#{@category_grandchild.name}", "#"
                        
                %tr
                  %th
                    ブランド
                      
                  %td
                    
                %tr
                  %th
                    商品のサイズ
                  %td
                %tr
                  %th
                    商品の状態
                  %td
                    = @item.item_condition
                %tr
                  %th
                    配送料の負担
                  %td
                    = @item.cost
                %tr
                  %th
                    発送元の地域
                  %td
                    -# = link_to "#{@item.prefecture_fire}","#"
                %tr
                  %th
                    発送日の目安
                  %td
                    = @item.days
          .optionalArea 
            %ul
              %li.optionalBtn__likeBtn
                %i.fa.fa-star
                  お気に入り 1
            %ul.optional
              %li.optionalBtn
                %a
                  -# = link_to "#"
                  %i.fa.fa-flag
                    不適切な商品の通報

        .commentBox
          %ul.commentContents
          //コメントテーブルないため以下のformは仮で作成
          %form.new_comment
            %textarea.message_form{name: "message", placeholder: "MESSAGE"}
            %p.noticeMsg
              相手のことを考え丁寧なコメントを心がけましょう。
              %br
              不快な言葉遣いなどは利用制限や退会処分となることがあります。
            %br
            %button{type: "submit",class: "commentBtn"}
              %i.fas.fa-comment
              コメントする
      %ul.links
        %li.links__before
          = link_to "#", class: "angle__left" do
            = icon('fa', 'angle-left')
            %span 前の商品
        %li.links__after
          = link_to "#", class: "angle__right" do
            %span 後ろの商品
            = icon('fa', 'angle-right')

      .relatedItems
        .relatedItems__title
          %a
            = link_to "レディースをもっと見る"
        .productLists
          .productList
            %a
              -# = link_to "#"
            .productList__img
              = image_tag asset_path('carry.png')
            .productList__body
              %h3.name
                product1
                .details
                  %ul
                    %li
                      100000円
                    %li
                      %i.fa.fa-star.likeIcon
                        1
                  %p
                    (税込) 
= render partial: "items/banner"
= render partial: "items/footer"

- if current_user == @user
  = link_to "商品の編集", edit_item_path(@item.id) , class: "edit"
  = link_to "商品の削除", item_path(@item.id), method: :delete, class: "destory"
- elsif user_signed_in?
  = link_to "購入画面に進む", buy_card_path(@item.id), class: "pay"
- else