<% content_for :css do %>
  <%= stylesheet_link_tag 'modules/sign_up' %>
<% end %>
<h2>サインアップ</h2>

<%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
   <div class="new">
    <%= f.label :ニックネーム %><br />
    <p>必須</p>
     </div>
    <%= f.text_field :nickname, autofocus: true %>
  </div>
     
   <div class="field"> 
     <div class="new">
     <%= f.label :名前 %><br />
     z
     </div>
     <%= f.text_field :first_name, autofocus: true  %>
   </div> 

   <div class="field">
     <div class="new">
     <%= f.label :苗字 %><br />
     <p>必須</p>
     </div>
     <%= f.text_field :family_name, autofocus: true %>
   </div>

   <div class="field">
     <div class="new">
     <%= f.label :名前（ふりがな） %><br />
     <p>必須</p>
     </div>
     <%= f.text_field :first_name_kana, autofocus: true %>
   </div>  

   <div class="field">
     <div class="new">
     <%= f.label :苗字（ふりがな） %><br />
     <p>必須</p>
     </div>
     <%= f.text_field :family_name_kana, autofocus: true %>
   </div>

   <div class="field">
     <div class="new">
     <%= f.label :誕生日 %><br />
     <p>必須</p>
     </div>
     <%= f.date_select :birthday, use_month_numbers: true,
     start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), autofocus: true %>
   </div>

   <div class="field">
     <%= f.label :自己紹介 %><br />
     <%= f.text_field :introduction, autofocus: true %>
   </div>

   <div class="field">
     <%= f.label :写真 %><br />
     <%= f.file_field :avator, autofocus: true %>
   </div>

 
  <div class="field">
    <div class="new">
    <%= f.label :メールアドレス %><br />
    <p>必須</p>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <div class="new">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <p>必須</p>
     </div>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <div class="new">
    <%= f.label :パスワード確認 %><br />
    <p>必須</p>
     </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "サインアップ" %>
  </div>
<% end %>

 
   
<%= render "devise/shared/links" %>
