- content_for :css do
  = stylesheet_link_tag 'modules/items'


.Header
  .Header__Inner
    .Header__Inner--Main
      .Icon
        %a{href: "/assets/logo.png"}
        = image_tag "/assets/logo.png", alt: "次へ" ,width:"140px", height:"50px", class: "icon"

      
      .searchBox
        %form{actio: "http://xxxxxxxxxxxxx.com/", metho: "get", class: "form"}
          %input{nam: "s", placeholder: "キーワードから探す", type: "text", class: "search-box"}>
          %button{type: "submit",class: "search-btn"}
            %i.fas.fa-search


  .Header__Inner--HeaderNavi
    .listsLeft
      .listsLeft__item
        = link_to 'categories#index' do
          カテゴリー
      .listsLeft__brand
        = link_to "ブランド", :root, class: 'Button'


      .listsRight
        - if user_signed_in?
          .user_nav.grid-6
            = link_to('マイページ', user_path(current_user.id))
        - else
          .grid-6
            .listsRight__login
              = link_to "ログイン", new_user_session_path, class: 'Button'
            .listsRight___new
              = link_to "新規会員登録", new_user_registration_path, class: 'Button'
            
